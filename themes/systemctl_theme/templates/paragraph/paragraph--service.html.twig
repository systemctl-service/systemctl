{% set position = content.field_image_position.0 %}
{% if "Right" in position %}
  <div class="row service-desc-content">
    <div class="col-lg-7 col-md-12 col-sm-12">
      <h3>{{content.field_title.0}}</h3>
      {{content.field_content.0}}
    </div>
    <div class="col-lg-5 col-md-12 col-sm-12">
     <img src="{{ file_url(content.field_image['#items'].entity.uri.value)}}"
           class="img-fluid" 
           alt="{{ content.field_image['#items'].alt }}" 
           title="{{ content.field_image['#items'].title }}">
    </div>
  </div>
{% else %}
  <div class="row service-desc-content">
    <div class="col-lg-5 col-md-12 col-sm-12">
     <img src="{{ file_url(content.field_image['#items'].entity.uri.value)}}"
           class="img-fluid" 
           alt="{{ content.field_image['#items'].alt }}" 
           title="{{ content.field_image['#items'].title }}">
    </div>
    <div class="col-lg-7 col-md-12 col-sm-12">
      <h3>{{content.field_title.0}}</h3>
      {{content.field_content.0}}
    </div>
  </div>  
{% endif %}
